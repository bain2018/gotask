{
    "name": "bain2018/gotask",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "A replacement for Swoole TaskWorker in Go,upgrade to hyperf3.1",
    "autoload": {
        "psr-4": {
            "Hyperf\\GoTask\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-swoole": ">=5.0",
        "hyperf/pool": "^3.1",
        "hyperf/process": "^3.1",
        "spiral/goridge": "^2.4",
        "symfony/event-dispatcher": "^7.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.41",
        "hyperf/command": "^3.1",
        "hyperf/config": "^3.1",
        "hyperf/di": "^3.1",
        "hyperf/framework": "^3.1",
        "hyperf/testing": "^3.1",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "swoole/ide-helper": "^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "go build -o app example/*.go && go build -o mongo example/mongo_client/*.go && phpunit -c phpunit.xml --colors=always",
        "start-test-server": "php tests/TestServer.php",
        "test-go": "/bin/bash -c 'php tests/TestServer.php & sleep 5 && go test ./...'",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "binary": "go build -o mongo example/mongo_client/*.go"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\GoTask\\ConfigProvider"
        }
    }
}
